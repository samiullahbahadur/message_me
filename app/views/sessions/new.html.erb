

<h4 class="ui center aligned medium icon header">

  Welcome to MessageMe - a complete Chate App
</h4>

<h4 class="ui center aligned medium icon header">
<i class="circular orange coffee icon"></i>
Log in to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">

    
      <%= form_with session:,class:"ui form",  url: login_path do |form| %>
        <div class="field">
          <%= form.label :username ,"Username" %>
          <div class="ui left icon input">
            <%=form.text_field :username, placeholder:"Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
        <%= form.label :passowrd, "Password" %>
          <div class="ui left icon input">
          <%=form.password_field :password, placeholder:"Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= form.button "login", class:"ui  submit  orange button"%>
        <% end %>
      
    </div>
    <div class="middle aligned  column">
      <div class="ui big  orange button ">
        <i class="signup icon  "></i>
        Sign Up
      </div>
      </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>